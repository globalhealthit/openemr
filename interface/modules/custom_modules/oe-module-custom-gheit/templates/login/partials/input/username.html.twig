<style type="text/css">
    .col-sm-4 {
        flex: 0 0 100%;
        max-width: 100%;
    }

    @media (min-width: 576px) {
        .col-sm-4 {
            flex: 0 0 33.33333333%;
            max-width: 30.33333333%;
        }
    }
</style>
{% block username %}
<div id="standard-auth-username" class="{{ username_container_class_list|default(['form-group', 'row'])|join(' ') }}">
    <label for="authUser" class="{{ srOnly }} {{ username_label_class_list|default(['col-form-label', 'col-sm-4'])|join(' ') }}">{{ "Username"|xlt }}</label>
    <div class="{{ username_input_container_class_list|default(['col'])|join(' ') }}">
        <input type="text" class="form-control" id="authUser" name="authUser" placeholder="{{ ""|xla }}">
    </div>
</div>
{% endblock %}
